{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": [2, "never"],
        "no-use-before-define": ["error", { "functions": true, "classes": true }],
        "consistent-this": ["error", "that"],
    }
}
